<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.github.xfalcon.vhosts.MainActivity">

    <Button
            android:id="@+id/button_select_hosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/re_select_hosts"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="18sp"
            android:layout_marginBottom="62dp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <com.suke.widget.SwitchButton
            android:id="@+id/button_start_vpn"
            android:layout_width="230dp"
            android:layout_height="115dp"
            android:text="@string/start_vpn"
            android:rotation="-90"
            android:layout_above="@+id/button_select_hosts" android:layout_centerHorizontal="true"
            android:layout_marginBottom="109dp"/>

</RelativeLayout>
