<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="20dip" />
                <stroke android:width="1dip" android:color="#23a7f1" />
                <gradient android:angle="-90" android:startColor="#217eb3" android:endColor="#68b1da"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="20dip" />
                <stroke android:width="1dip" android:color="#23a7f1" />
                <solid android:color="#3f8bb7"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="20dip" />
                <stroke android:width="1dip" android:color="#23a7f1" />
                <gradient android:angle="-90" android:startColor="#5fbaec" android:endColor="#59a6d2" />
            </shape>
        </item>
</selector>