<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="20dip" />
                <stroke android:width="2dip" android:color="#acacae" />
                <gradient android:angle="-90" android:startColor="#b1b1b1" android:endColor="#d5d5ff"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="20dip" />
                <stroke android:width="2dip" android:color="#acacae" />
                <solid android:color="#cdcdce"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="20dip" />
                <stroke android:width="2dip" android:color="#acacae" />
                <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#d9d6d6" />
            </shape>
        </item>
</selector>